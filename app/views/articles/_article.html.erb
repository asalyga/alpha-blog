<div class="container">
  <% obj.each do |article| %>
    <div class="row justify-content-md-center"><div class="col-8 mt-2"><div class="card text-center mt-4">
      <div class="card-header"> <%= article.user.username if article.user %> </div>
      <div class="card-body">
        <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-success" %></h5>
        <p class="card-text"><%= truncate(article.description, length: 100) %></p>
        <%= link_to "View", article_path(article), class: "btn btn-outline-success"  %>
        <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info" %>
        <%= link_to "Delete", article_path(article), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure>"} %>
      </div>
      <div class="card-footer text-muted"><%= article.created_at %> </div>
    </div></div></div>
  <% end %>
</div>
